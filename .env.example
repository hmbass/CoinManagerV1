# Upbit API Configuration
# Get these from https://upbit.com/service_center/open_api_guide
UPBIT_ACCESS_KEY=your_access_key_here
UPBIT_SECRET_KEY=your_secret_key_here

# Trading Configuration
TRADING_MODE=paper  # paper or live (CAUTION: live mode uses real money!)
ENVIRONMENT=development  # development, staging, production

# Telegram Notifications (optional)
# Get bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
# Get chat ID by messaging your bot and checking /getUpdates
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# Optional: Override default config file path
# CONFIG_FILE=configs/config.yaml

# Optional: Log level override  
# LOG_LEVEL=INFO
